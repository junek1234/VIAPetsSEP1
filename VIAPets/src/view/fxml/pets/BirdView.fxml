<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleGroup?>

<VBox id="searchBar" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.BirdViewController">
  <children>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Name">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petNameTextField" prefHeight="0.0" prefWidth="118.0" />
            <Label prefHeight="34.0" prefWidth="60.0" text="Color">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petColorTextField" prefHeight="0.0" prefWidth="118.0" />
         </children>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Age">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petAgeTextField" prefHeight="0.0" prefWidth="118.0" />
            <Label prefHeight="34.0" prefWidth="60.0" text="Gender">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <fx:define>
               <ToggleGroup fx:id="genderGroup" />
            </fx:define>
            <RadioButton fx:id="petBirdGenderMaleRadioButton"  text="Male" toggleGroup="$genderGroup"/>
            <RadioButton fx:id="petBirdGenderFemaleRadioButton"  text="Female" toggleGroup="$genderGroup">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </RadioButton>
         </children>
         <VBox.margin>
            <Insets top="25.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Location">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <fx:define>
               <ToggleGroup fx:id="locationGroup" />
            </fx:define>
            <RadioButton fx:id="petLocationShopRadioButton" mnemonicParsing="false" text="Shop" toggleGroup="$locationGroup" />
            <RadioButton fx:id="petLocationKennelRadioButton" mnemonicParsing="false" text="Kennel" toggleGroup="$locationGroup">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </RadioButton>
            <Label prefHeight="34.0" prefWidth="60.0" text="Price">
               <HBox.margin>
                  <Insets left="55.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petPriceTextField" prefHeight="0.0" prefWidth="118.0" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="18.0" prefWidth="65.0" text="Status">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <fx:define>
               <ToggleGroup fx:id="statusGroup" />
            </fx:define>
            <RadioButton fx:id="petStatusSoldRadioButton" mnemonicParsing="false" text="Sold" toggleGroup="$statusGroup" />
            <RadioButton fx:id="petStatusNotSoldRadioButton" mnemonicParsing="false" text="Not sold" toggleGroup="$statusGroup">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="petStatusNotFromViaRadioButton" mnemonicParsing="false" text="Not from VIAPets" toggleGroup="$statusGroup" >
               <padding>
                  <Insets left="30.0" />
               </padding>
            </RadioButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Species">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petSpeciesTextField" prefHeight="0.0" prefWidth="118.0" />
            <Label prefHeight="26.0" prefWidth="80.0" text="Preferred food">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petFoodTextField" prefHeight="0.0" prefWidth="118.0" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="118.0" prefWidth="640.0">
         <children>
            <VBox alignment="CENTER" prefHeight="90.0" prefWidth="329.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="63.0" prefWidth="273.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="25.0" prefWidth="80.0" text="Comment" textAlignment="CENTER" />
                        <TextArea fx:id="petCommentTextField" prefHeight="39.0" prefWidth="157.0">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextArea>
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="petSaveButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveAddPet" text="Save">
         <VBox.margin>
            <Insets bottom="10.0" left="275.0" top="10.0" />
         </VBox.margin>
      </Button>
  </children>
</VBox>
