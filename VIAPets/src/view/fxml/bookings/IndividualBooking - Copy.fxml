<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="searchBar" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="640.0" spacing="30.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EditBookingViewControler">
  <children>
      <MenuBar>
          <menus>
              <Menu mnemonicParsing="false" text="Pets">
                  <items>
                      <MenuItem fx:id="petsMenuItem" mnemonicParsing="false" text="View Pets" onAction="#switchScene"/>
                      <Menu mnemonicParsing="false" text="Add Pet">
                          <items>
                              <MenuItem fx:id="dogMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Dog" />
                              <MenuItem fx:id="catMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Cat" />
                              <MenuItem fx:id="birdMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Bird" />
                              <MenuItem fx:id="fishMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Fish" />
                              <MenuItem fx:id="rodentMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Rodent" />
                              <MenuItem fx:id="variousMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Various" />
                          </items>
                      </Menu>
                  </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Customers">
                  <items>
                      <MenuItem fx:id="customersMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Customers" />
                      <MenuItem fx:id="addCustomerMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Add Customer" />
                  </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Bookings">
                  <items>
                      <MenuItem fx:id="bookingsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Bookings" />
                      <MenuItem fx:id="addBookingMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Add Booking" />
                      <MenuItem fx:id="bookingsSettingsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="Settings" />
                  </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Sales">
                  <items>
                      <MenuItem fx:id="salesMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Sales" />
                      <MenuItem fx:id="addSaleMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Add Sales" />
                  </items>
              </Menu>
          </menus>
      </MenuBar>
      <HBox alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Pet">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField prefHeight="0.0" prefWidth="118.0" />
            <Button mnemonicParsing="false" prefHeight="33.0" prefWidth="59.0" text="Edit">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Label prefHeight="34.0" prefWidth="60.0" text="Customer">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <TextField prefHeight="0.0" prefWidth="118.0" />
            <Button mnemonicParsing="false" text="Edit">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Start Date">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField prefHeight="0.0" prefWidth="118.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" text="Edit">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Label prefHeight="34.0" prefWidth="60.0" text="End Date">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <TextField prefHeight="0.0" prefWidth="118.0" />
            <Button mnemonicParsing="false" text="Edit">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <Button alignment="TOP_CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Confirm">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
  </children>
</VBox>
