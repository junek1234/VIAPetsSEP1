<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="searchBar" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DefaultSalesViewController">
  <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="Pets">
               <items>
                  <MenuItem fx:id="petsMenu" mnemonicParsing="false" text="Pet" onAction="#switchScene"/>
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Customers">
               <items>
                  <MenuItem fx:id="customersMenu" mnemonicParsing="false" text="Customers" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Bookings">
               <items>
                  <MenuItem fx:id="bookingsListMenu" mnemonicParsing="false" text="View" />
                  <MenuItem fx:id="bookingsSettingsMenu" mnemonicParsing="false" text="Settings" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Sales">
               <items>
                  <MenuItem fx:id="salesMenu" mnemonicParsing="false" text="Sales" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <VBox prefHeight="377.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox maxHeight="-Infinity" prefHeight="28.0" prefWidth="640.0">
                     <children>
                        <TextField prefHeight="26.0" prefWidth="573.0" promptText="Search..." HBox.hgrow="ALWAYS" />
                        <Button minWidth="-Infinity" mnemonicParsing="false" prefHeight="22.0" prefWidth="60.0" text="Search" HBox.hgrow="NEVER" onAction="#search"/>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button mnemonicParsing="false" text="Add sale">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
      <TableView prefHeight="566.0" prefWidth="640.0">
        <columns>
          <TableColumn minWidth="85.0" prefWidth="130.0" text="Sale ID" />
          <TableColumn minWidth="85.0" prefWidth="130.0" text="Pet Name" />
            <TableColumn minWidth="85.0" prefWidth="130.0" text="Customer Name" />
            <TableColumn minWidth="85.0" prefWidth="130.0" text="Sales Prices" />
            <TableColumn minWidth="85.0" prefWidth="130.0" text="Actions" />
        </columns>
      </TableView>
  </children>
</VBox>
