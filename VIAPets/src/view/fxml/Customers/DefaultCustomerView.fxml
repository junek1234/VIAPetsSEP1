<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="searchBar" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ViewHandler">
  <children>
      <MenuBar>
          <menus>
              <Menu mnemonicParsing="false" text="Pets">
                  <items>
                      <MenuItem fx:id="petsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Pets" />
                      <Menu mnemonicParsing="false" text="Add Pet">
                          <items>
                              <MenuItem fx:id="dogMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Dog" />
                              <MenuItem fx:id="catMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Cat" />
                              <MenuItem fx:id="birdMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Bird" />
                              <MenuItem fx:id="fishMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Fish" />
                              <MenuItem fx:id="rodentMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Rodent" />
                              <MenuItem fx:id="variousMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Various" />
                          </items>
                      </Menu>
                  </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Customers">
                  <items>
                      <MenuItem fx:id="customersMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Customers" />
                      <MenuItem fx:id="addCustomerMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Add Customer" />
                  </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Bookings">
                  <items>
                      <MenuItem fx:id="bookingsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Bookings" />
                      <MenuItem fx:id="addBookingMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Add Booking" />
                      <MenuItem fx:id="bookingsSettingsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="Settings" />
                  </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Sales">
                  <items>
                      <MenuItem fx:id="salesMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Sales" />
                      <MenuItem fx:id="addSaleMenuItem" mnemonicParsing="false" onAction="#showPopup" text="Add Sales" />
                  </items>
              </Menu>
          </menus>
      </MenuBar>
      <VBox prefHeight="377.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox maxHeight="-Infinity" prefHeight="28.0" prefWidth="640.0">
                     <children>
                        <TextField prefHeight="26.0" prefWidth="573.0" promptText="Search..." HBox.hgrow="ALWAYS" />
                        <Button minWidth="-Infinity" mnemonicParsing="false" prefHeight="22.0" prefWidth="60.0" text="Search" HBox.hgrow="NEVER" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button fx:id="addCustomerButton" mnemonicParsing="false" onAction="#showPopup" text="Add Customer">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
  </children>
</VBox>
