<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="searchBar" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ViewHandler">
  <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="Pets">
               <items>
                  <MenuItem fx:id="petsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Pets" />
                  <Menu mnemonicParsing="false" text="Add Pet">
                     <items>
                        <MenuItem fx:id="dogMenuItem" mnemonicParsing="false"  text="Dog" />
                        <MenuItem fx:id="catMenuItem" mnemonicParsing="false"  text="Cat" />
                        <MenuItem fx:id="birdMenuItem" mnemonicParsing="false"  text="Bird" />
                        <MenuItem fx:id="fishMenuItem" mnemonicParsing="false" text="Fish" />
                        <MenuItem fx:id="rodentMenuItem" mnemonicParsing="false"text="Rodent" />
                        <MenuItem fx:id="variousMenuItem" mnemonicParsing="false" text="Various" />
                     </items>
                  </Menu>
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Customers">
               <items>
                  <MenuItem fx:id="customersMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Customers" />
                  <MenuItem mnemonicParsing="false" onAction="#switchScene" text="Add Customers" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Bookings">
               <items>
                  <MenuItem fx:id="bookingsListMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Bookings" />
                  <MenuItem fx:id="bookingsListMenu1" mnemonicParsing="false" onAction="#switchScene" text="Add Booking" />
                  <MenuItem fx:id="bookingsSettingsMenuItem" mnemonicParsing="false" onAction="#switchScene" text="Settings" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Sales">
               <items>
                  <MenuItem fx:id="salesMenuItem" mnemonicParsing="false" onAction="#switchScene" text="View Sales" />
                  <MenuItem mnemonicParsing="false" onAction="#switchScene" text="Add Sales" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <VBox prefHeight="377.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox fx:id="vBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox maxHeight="-Infinity" prefHeight="28.0" prefWidth="640.0">
                     <children>
                        <TextField prefHeight="26.0" prefWidth="573.0" promptText="Search..." HBox.hgrow="ALWAYS" />
                        <Button minWidth="-Infinity" mnemonicParsing="false" prefHeight="22.0" prefWidth="60.0" text="Search" HBox.hgrow="NEVER" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button mnemonicParsing="false" text="Add pet">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
      <TableView fx:id="petTable" prefHeight="566.0" prefWidth="640.0">
        <columns>
          <TableColumn fx:id="petIDColumn" minWidth="85.0" prefWidth="105.0" text="PetID" />
          <TableColumn fx:id="petNameColumn" minWidth="85.0" prefWidth="105.0" text="Pet Name" />
            <TableColumn fx:id="petColorColumn" minWidth="85.0" prefWidth="105.0" text="Color" />
            <TableColumn fx:id="petGenderColumn" minWidth="85.0" prefWidth="105.0" text="Gender" />
            <TableColumn fx:id="petPriceColumn" minWidth="85.0" prefWidth="105.0" text="Price" />
            <TableColumn fx:id="petActionColumn" minWidth="85.0" prefWidth="105.0" text="Actions" />
        </columns>
      </TableView>
  </children>
</VBox>
