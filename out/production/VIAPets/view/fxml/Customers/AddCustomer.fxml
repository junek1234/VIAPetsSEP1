<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="searchBar" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="640.0" spacing="30.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CustomerViewController">
  <children>

      <HBox alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <children>
            <Label prefHeight="26.0" prefWidth="33.0" text="Name">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="customerNameTextField" prefHeight="26.0" prefWidth="98.0">
               <HBox.margin>
                  <Insets left="5.0" right="35.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="26.0" prefWidth="86.0" text="PhoneNumber">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="customerPhoneNumberTextField" prefHeight="26.0" prefWidth="98.0">
               <HBox.margin>
                  <Insets bottom="2.0" left="5.0" right="8.0" />
               </HBox.margin>
            </TextField>
            <Label prefHeight="28.0" prefWidth="35.0" text="E-mail">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="customerEmailTextField" prefHeight="26.0" prefWidth="98.0">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <Button fx:id="saveButton" alignment="TOP_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveAddCustomer" text="Save">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
  </children>
</VBox>
