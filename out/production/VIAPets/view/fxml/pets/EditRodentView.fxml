<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="searchBar" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RodentViewController">
  <children>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Name">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petNameEditTextField" prefHeight="0.0" prefWidth="118.0" />
            <Label prefHeight="34.0" prefWidth="60.0" text="Color">
               <HBox.margin>
                  <Insets left="75.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petColorEditTextField" prefHeight="0.0" prefWidth="118.0" />
         </children>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="10.0" prefWidth="640.0">
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Age">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petAgeEditTextField" prefHeight="0.0" prefWidth="118.0" />
            <Label prefHeight="34.0" prefWidth="60.0" text="Gender">
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </Label>
            <RadioButton fx:id="petGenderMaleEditRadioButton" mnemonicParsing="false" text="Male" />
            <RadioButton fx:id="petGenderFemaleEditRadioButton" mnemonicParsing="false" text="Female">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </RadioButton>
         </children>
         <VBox.margin>
            <Insets top="25.0" />
         </VBox.margin>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="18.0" prefWidth="66.0" text="Location">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <RadioButton fx:id="petLocationShopEditRadioButton" mnemonicParsing="false" text="Shop" />
            <RadioButton fx:id="petLocationKennelEditRadioButton" mnemonicParsing="false" text="Kennel">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </RadioButton>
            <Label prefHeight="34.0" prefWidth="60.0" text="Price">
               <HBox.margin>
                  <Insets left="35.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petPriceEditTextField" prefHeight="0.0" prefWidth="118.0" />
         </children>
         <VBox.margin>
            <Insets top="35.0" />
         </VBox.margin>
      </HBox>
      <HBox maxHeight="-Infinity" prefHeight="18.0" prefWidth="640.0">
         <children>
            <Label prefHeight="18.0" prefWidth="65.0" text="Status">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
            <RadioButton fx:id="petStatusSoldEditRadioButton" mnemonicParsing="false" text="Sold" />
            <RadioButton fx:id="petStatusNotSoldEditRadioButton" mnemonicParsing="false" text="Not sold">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="petStatusNotFromViaEditRadioButton" mnemonicParsing="false" text="Not from VIAPets">
               <padding>
                  <Insets left="50.0" />
               </padding>
            </RadioButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="35.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="67.0" prefWidth="640.0">
         <children>
            <Label prefHeight="34.0" prefWidth="60.0" text="Species">
               <HBox.margin>
                  <Insets bottom="40.0" left="50.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="petSpeciesEditTextField" prefHeight="0.0" prefWidth="118.0">
               <HBox.margin>
                  <Insets bottom="40.0" />
               </HBox.margin>
            </TextField>
            <VBox alignment="CENTER" prefHeight="118.0" prefWidth="253.0">
               <children>
                  <Label alignment="CENTER" prefHeight="26.0" prefWidth="80.0" text="Comment" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="104.0" prefWidth="395.0">
                     <children>
                        <TextArea fx:id="petCommentEditTextField" prefHeight="39.0" prefWidth="157.0">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextArea>
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets left="80.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="25.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="petSaveButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveEditRodent" text="Save" textAlignment="CENTER">
         <VBox.margin>
            <Insets left="280.0" top="25.0" />
         </VBox.margin>
      </Button>
  </children>
</VBox>
